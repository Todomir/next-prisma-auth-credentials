datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id            Int     @id @default(autoincrement())
  name          String
  youtubeID     String?
  albumCoverUrl String?
  artist        Artist? @relation(fields: [artistId], references: [id])
  artistId      Int?
}

model Artist {
  id    Int    @id @default(autoincrement())
  name  String @unique
  songs Song[]
}
